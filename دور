    <footer class="text-center mt-12 text-gray-400">
        <p>&copy; 2025. جميع الحقوق محفوظة.</p>
    </footer>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInWithCustomToken, signInAnonymously, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, collection, addDoc, onSnapshot, query, serverTimestamp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // Firebase Configuration & Initialization
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const firebaseConfig = JSON.parse(typeof __firebase_config !== 'undefined' ? __firebase_config : '{}');
        let db, auth;
        let userId = null;

        if (Object.keys(firebaseConfig).length > 0) {
            const app = initializeApp(firebaseConfig);
            db = getFirestore(app);
            auth = getAuth(app);

            // Using onAuthStateChanged is more reliable for a persistent connection
            onAuthStateChanged(auth, async (user) => {
                if (user) {
                    userId = user.uid;
                    console.log("Authentication successful. User ID:", userId);
                    document.getElementById('user-id-display').textContent = 'معرف المستخدم الخاص بك: ' + userId;
                    setupSubmissionsListener();
                } else {
                    console.log("No user signed in. Attempting anonymous or token sign-in.");
                    try {
                        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;
                        if (initialAuthToken) {
                            await signInWithCustomToken(auth, initialAuthToken);
                        } else {
                            await signInAnonymously(auth);
                        }
                    } catch (error) {
                        console.error("Authentication failed:", error);
                        document.getElementById('user-id-display').textContent = 'فشل في المصادقة.';
                    }
                }
            });
        } else {
            document.getElementById('user-id-display').textContent = 'إعدادات Firebase غير متوفرة.';
        }

        // Setup real-time listener for submissions
        function setupSubmissionsListener() {
            if (!db) {
                console.error("Firestore DB is not initialized.");
                return;
            }
            const submissionsCollection = collection(db, 'artifacts', appId, 'public', 'data', 'user_submissions');
            const q = query(submissionsCollection);
            onSnapshot(q, (snapshot) => {
                const submissionsList = document.getElementById('submissions-list');
                submissionsList.innerHTML = '';
                
                if (snapshot.empty) {
                    submissionsList.innerHTML = '<p class="text-center text-gray-400">لا توجد إدخالات بعد. كن أول من يشارك!</p>';
                    return;
                }

                snapshot.forEach(doc => {
                    const data = doc.data();
                    const submissionElement = document.createElement('div');
                    submissionElement.className = 'card p-4 md:p-6 mb-4';
                    submissionElement.innerHTML = `
                        <h4 class="text-lg font-bold text-gray-700 mb-2">من: ${data.name || 'مجهول'}</h4>
                        <p class="text-sm text-gray-500 mb-2">المعرّف: ${data.userId || 'غير متوفر'}</p>
                        <p class="text-gray-600 leading-relaxed">${data.message || 'لا توجد رسالة.'}</p>
                    `;
                    submissionsList.appendChild(submissionElement);
                });
            });
        }
        
        // Handle form submission
        document.getElementById('contact-form').addEventListener('submit', async function(event) {
            event.preventDefault();
            const form = event.target;
            const name = form.name.value;
            const email = form.email.value;
            // لا نقوم بحفظ كلمة السر لأسباب أمنية
            const message = form.message.value;
            const statusMessage = document.getElementById('status-message');

            if (!db || !userId) {
                statusMessage.textContent = 'خطأ: لم يتم إعداد قاعدة البيانات بعد. يرجى المحاولة لاحقًا.';
                statusMessage.classList.remove('hidden');
                statusMessage.classList.add('text-red-600');
                console.error("Form submission failed: Firestore DB or User ID is not available.");
                return;
            }

            try {
                await addDoc(collection(db, 'artifacts', appId, 'public', 'data', 'user_submissions'), {
                    userId: userId,
                    name: name,
                    email: email,
                    message: message,
                    timestamp: serverTimestamp()
                });
                
                statusMessage.textContent = 'شكرًا لك يا ' + name + '! تم حفظ بياناتك بنجاح.';
                statusMessage.classList.remove('hidden');
                statusMessage.classList.add('text-green-600');
                form.reset();

                // إخفاء الرسالة بعد بضع ثوانٍ
                setTimeout(() => {
                    statusMessage.classList.add('hidden');
                }, 5000);

            } catch (e) {
                console.error("خطأ في إضافة المستند: ", e);
                statusMessage.textContent = 'حدث خطأ أثناء الحفظ. يرجى المحاولة مرة أخرى.';
                statusMessage.classList.remove('hidden');
                statusMessage.classList.add('text-red-600');
            }
        });
    </script>
</body>
</html>
